{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "eslint-plugin-react"
    ],
    "rules": {
	    "semi" : [2, "always"],
	    "no-undef": [0, "always"],
        "react/prop-types": "off"
    },
    "ignorePatterns": ["**/node_modules/**", "**/public/**", "**/build/**"],
    "overrides": [
        {
            "files": ["**/node_modules/**", "**/public/**", "**/build/**"],
            "rules": {
                "strict": "off"
            }
        }
    ]
}
